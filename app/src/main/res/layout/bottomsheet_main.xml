<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="50dp"
    android:id="@+id/bottom_sheet"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="0dp"
        android:clipToPadding="true"
        app:elevation="4dp"
        android:background="#7cb9fb"
        android:onClick="closeBottomSheet">

        <TextView
            android:id="@+id/bottomsheetScoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="26dp"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/bottomsheetCVDText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="34sp"
            android:paddingLeft="16dp"
            android:paddingTop="96dp"/>

        <TextView
            android:id="@+id/bottomsheetCVDExplanationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="9sp"
            android:paddingRight="8dp"
            android:paddingTop="136dp"
            android:gravity="right"/>

        <TextView
            android:id="@+id/bottomsheetHeartAgeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="34sp"
            android:paddingLeft="16dp"
            android:paddingTop="166dp"/>

        <TextView
            android:id="@+id/bottomsheetRiskLevelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="34sp"
            android:paddingLeft="16dp"
            android:paddingTop="236dp"/>

        <TextView
            android:id="@+id/bottomsheetTreatmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treatment"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="34sp"
            android:paddingLeft="16dp"
            android:paddingTop="306dp"/>

        <TextView
            android:id="@+id/bottomsheetNeedsTreatmentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="346dp"/>




    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>